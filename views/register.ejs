<%- include('templates/header.ejs') %>

<div class="container form-group" id="reg_container">
	<br><h2> Register an account </h2><hr>
	<script type="text/javascript" src="/javascripts/register_scripts.js">
		
		
	</script>
	<form method="POST" action="/register">
		<!-- Full Name -->
		
		<div class="form-group" id="name_form_group_id">
			<label for="reg_name_id">Full name</label>
			<input type="text" class="form-control" id="reg_name_id" name="name" placeholder="Enter your full Name" required>
		</div>

		<!-- Username -->
		<div class="form-group" id="username_form_group_id">
			<label for="reg_username_id">Username</label>
			<input type="text" class="form-control" id="reg_username_id" name="username" placeholder="Enter your username" required><!-- TODO: CHECK IN DB FOR USERNAME--> 
		</div>

		<!-- Field -->
		<div class="form-group" id="field_form_group_id">
			<label for="reg_field_id">Research field</label>
			<input type="text" class="form-control" id="reg_field_id" name="field" placeholder="Enter your research field" required>
		</div>

		<!-- Institution -->
		<div class="form-group" id="reg_form_group_id">
			<label for="institution">Associated institution </label>
			<input type="text" class="form-control" id="reg_inst" name="institution" placeholder="Enter your asociated institution">
		</div>

		<!-- Password-->
		<div class="form-group" id="pass_form_group_id">
			<label for="reg_pass">Password</label>
			<input type="password" class="form-control" id="reg_pass" name="password" placeholder="Password" required><br>

			<!-- MIGHT NEED LABEL-->
			<input type="password" class="form-control" id="reg_pass_2" name="password_2" placeholder="Confirm your password" required>
		</div>
		
		
		<button type="submit" class="btn btn-primary" id="register_btn"> Register </button>
	</form> 
</div>

<!-- FOOTER -->
<%- include('templates/footer.ejs') %>